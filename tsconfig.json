{
  "compilerOptions": {
    "outDir": "packages",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "exclude": [
    "node_modules",
    "packages",
    "scripts",
    "acceptance-tests",
    "webpack.config.js",
    "jest.config.js",
    "styleguide.config.js",
    "jest",
    "setupTests.ts",
    "config",
    "typedoc.js",
    "coverage",
    "stories"
  ],
  "types": ["./src/typings"]
}
